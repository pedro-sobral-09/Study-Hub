programa {
  funcao inicio() {inteiro x, y
    escreva("Informe  primeiro valor: ")
    leia(x)
    escreva("Informe o segundo valor: ")
    leia(y)
    soma(x, y)
  }
  funcao soma(inteiro n1, inteiro n2){
    escreva("Recebi o primeiro valor: ", n1)
    escreva("\nRecebi o primeiro valor: ", n2)
   escreva("\nRecebi a soma: ", n1+n2)
  }
}
